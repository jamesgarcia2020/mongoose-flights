<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body><nav>
    <a href="/">Home</a>
    &nbsp; | &nbsp;
    <a href="/flights/new">New Flight</a>
    &nbsp; | &nbsp;
    <a href="/flights">All Flights</a></nav>
    <main>
  <h1>Flight List</h1>
  <table>
      <thead>
          <tr>
              <th>Airline</th>
              <th>Airport</th>
              <th></th>
              
          </tr>
      </thead>
      <tbody>
          <% flights.forEach(function(f) { %>
              <tr>
                  <td><%= f.airline %></td>
                  <td><%= f.airport %></td>
                  
                  <td><a class="button" href="/flights/<%= f._id %>">DETAILS</a></td>
              </tr>
          <% }); %>
      </tbody>
    </table>
    </main>
</body>
</html>